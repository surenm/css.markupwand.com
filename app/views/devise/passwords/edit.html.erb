<%= content_for :content do %>
<%= stylesheet_link_tag "app/login", :media => "all" %>
<%= render 'shared/header_small' %>

<div class="container-extra-narrow colored">

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put , :class => "form-signin"}) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <%= f.password_field :password , :placeholder => 'Your new password', :class => 'input-block-level'%>

  <%= f.password_field :password_confirmation, :placeholder => 'Confirm your password', :class => 'input-block-level'%>

  <div><%= f.submit "Change my password", :class => 'btn btn-success' %></div>
<% end %>

<%= render "devise/shared/links" %>
<% end %>