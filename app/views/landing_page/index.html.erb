<%= content_for :content do %>


  <div class="header">
    <div class="header-logo-wrap">
      <img class="header-logo" src="/assets/logo-small-monocolor.png">
    </div>
  </div>
<div id="landing-page">

  <div class="container flow-block-wrap">

      <div class="row flows-block">
          <img class="pull-left photoshop-icon" src="./assets/photoshop-icon.png"><img class="pull-left arrow1" src="/assets/arrow1.png"><img class="pull-left markupwand-icon" src=
          "/assets/wand.png"><img class="pull-left arrow2" src="/assets/arrow2.png">

          <div class="pull-left html-css-block">
              HTML <span class="ampersand">&amp;</span> CSS
          </div>
      </div>

      <div class="row flows-text-block">
          <div class="pull-left">
              Your photoshop file
          </div>

          <div class="pull-left markupwand-item">
              Markupwand
          </div>

          <div class="pull-left plug-into-item">
              Plug into your code
          </div>
      </div>
  </div>

  <div class="container email-invite-box">
    <form id="getinvite" action="getinvite" method="POST">
    <input name="email" class="input-large" id="invite-email" placeholder="user@gmail.com"/>
    <input type="submit" class="btn btn-large btn-primary" value="Request Invite Now!"/>
    <div id="validation-result" class="error"></div>
    </form>
    <center>
      <%= render 'shared/snippets/gplusone' %>
      <%= render 'shared/snippets/tweet' %>
      <%= render 'shared/snippets/fbshare' %>
    </center>
  </div>
</div>

<%= content_for :javascript do %>
<script>
$(document).ready(function() {
validateEmail = function(email) {
  var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
  if(emailReg.test(email))
    return true;
  else
    return false;
  };
  
$(".default-value").formDefaults();
$("#getinvite").submit(function(e) {
  var valid = validateEmail($("#invite-email").val())
  if(valid) {
    return true;
  }
  else {
    e.preventDefault();
    $("#validation-result").text("Enter a valid E-mail address")
    return false;
  }
  });
});
</script>
