  <div class="navbar">
    <div class="navbar-inner">
      <% if not fluid %>
      <div class="container-narrow">
      <% end %>
        <div class="logo pull-left"><a href="/"><img src="/assets/logo-small.png"></a></div>
        <ul class="nav pull-right">
          <li><a href="/faq">FAQ</a></li>
          <li><a href="/pricing">Pricing</a></li> 
          
