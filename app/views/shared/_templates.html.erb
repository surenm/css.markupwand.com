<script id="image-template" type="text/template">
<div class="imageblock">
  <div class="layer-image">
    <div style="background-image: url('{{image_src}}');" class="preview-thumbnail"></div>
  </div>

  <div class="layer-name input-append">
    <span> <input type="text" data-original-image-name="{{ layer.getImageName() }}" data-layer-id="{{ layer.get('uid') }}" value="{{ layer.getImageName() }}"> </span>
    <span class="add-on">.png</span>
  </div>
</div>
</script>

<script id="images-view-template" type="text/template">
<div id="images">
<%= form_tag "/design/#{@design.safe_name}/images", :method => "post" %>
  <% if not @design.json_data[:sif].nil? and @design.photoshop_status == Design::STATUS_PROCESSING_DONE %>
    <% @design.layers.each do |uid, layer| %>
      <% if layer.type == Layer::LAYER_NORMAL %>
      <div class="span3 imageblock">
        <div class="image-thumb">
          <div style="background-image: url('/extracted/<%= @design.safe_name %>/images/<%= layer.image_name %>');" class="preview-thumbnail">
          </div>
        </div>

        <div class="image-name">
          <a href="#" class="image-name-editable" data-type="text" data-pk="<%= layer.uid %>" data-name="<%= layer.uid %>" data-url="/design/<%= @design.safe_name %>/image-rename" data-original-title="Enter image name"><%= layer.image_name %></a>
        </div>

      </div>
      <% end %>
    <% end %>
  <% end %>
  <div class="clearfix"></div>
</div>
</script>

