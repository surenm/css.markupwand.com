<%= content_for :css do %>
<style>

  img {
    max-width: none;
  }
</style>
<% end %>

<%= content_for :content do %>
<div style="margin: 0 auto;">
  <canvas id="main-canvas" height="1200" width="1500" style="border: 1px dotted #000"/>
</div>
<div id="layers" />
<div id="images" style="display:none">
  <% @sif[:layers].each do |layer| %>
    <% if layer[:type] == 'normal' %>
      <img src="/published/<%= @design.safe_name %>/assets/images/<%= layer[:image_name] %>" id="<%= layer[:uid] %>">
    <% end %>
  <% end %>
<% end %>

<%= content_for :javascript do %>
  <script type="text/javascript">
    var design_data = <%= raw @design.attribute_data.to_json %>;
    var sif_data = <%= raw @sif.to_json %>;

  </script>
  <%= javascript_include_tag "app/editor_app" %>
<% end %>
