<%= content_for :content do %>
  <%= render 'shared/header' %>
  <div class="container content-area-box">
    <%= render 'design/upload' %>
    <% if @designs.empty? %>
      <%= render 'design/widgets/view_tutorial_new_user' %>
    <% else %>
      <%= render 'design/widgets/view_tutorial_existing_user' %>
      <div class="horizontal-separator"></div>
      <%= render 'design/gallery' %>
    <% end %>
  </div>
<% end %>

<%= content_for :admin_content do %>
  <div id="admin-content">
    <small> These buttons will rerun stuff for all your designs</small>
    <a class="btn btn-large btn-danger" href="/admin/reprocess"> Reprocess PSD</a>
    <a class="btn btn-large btn-danger" href="/admin/reparse"> Reparse Grids</a>
    <a class="btn btn-large btn-danger" href="/admin/regenerate"> Regenerate HTML </a>
  </div>
<% end %>
